<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".carpool_area.carpool_detail.CarpoolAreaDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/tv_area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:text="Parkin Bel Air"/>

        <TextView
            android:id="@+id/tv_area_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/tv_area_name"
            app:layout_constraintStart_toStartOf="parent"

            android:text="Aire Covoiturage" />

        <TextView
            android:id="@+id/tv_area_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/tv_area_type"
            app:layout_constraintStart_toStartOf="parent"
            android:text="D21" />
        <TextView
            android:id="@+id/tv_area_zip"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/tv_area_adress"
            app:layout_constraintStart_toStartOf="parent"
            android:text="53170" />

        <TextView
            android:id="@+id/tv_area_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arquenay"
            android:layout_marginTop="20dp"

            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/tv_area_zip"
            app:layout_constraintTop_toBottomOf="@id/tv_area_adress" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>